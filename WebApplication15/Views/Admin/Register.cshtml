@model Privacy_Web_App.Models.RegisterViewModel
@{
    ViewData["Title"] = "New User Registering";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div style=";margin-bottom:60px">
    <h1>Register New User</h1>

   

    <a class="btn btn-outline-secondary" style="float:right;" href="@Url.Action("UserList")"><i class="fas fa-angle-left"></i> Back To List</a>
</div>

    

   
    






<div class="row">

    <div class="card">
        <div class="card-body">
            <form id="registerForm" method="post">
            <div class="mb-3">


                <div class="input-group">

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <span class="input-group-text" id="basic-addon1">User Name</span>
                            <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="UserName" />
                            
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        




                   
                   
                </div>
            </div>
            <div class="mb-3">

                <div class="input-group">


                        <span class="input-group-text" id="basic-addon1">Password</span>
                        <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                        
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>


                    
                   
                </div>
            </div>

            <div class="mb-3">

                <div class="input-group">

                        <span class="input-group-text" id="basic-addon1">Confirm Password</span>
                        <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" type="password" />
                        
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                   
                   
                </div>
            </div>
            <div class="mb-3">

                <div class="input-group">
                <select id="drpEmpList" class="form-select" asp-for="@Model.RoleName" asp-items="@Model.RolesList">
                    <option value="">--Select--</option>
                </select>
                <input type="hidden" asp-for="RoleName" />
                </div>
            </div>

                <div class="form-group">
                    <input type="submit" value="Add User" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>

@if (Model != null && Model.message != null)
{
    <div class="alert alert-danger">
        @Model.message
        @Html.ValidationSummary()
    </div>
}


            
      


