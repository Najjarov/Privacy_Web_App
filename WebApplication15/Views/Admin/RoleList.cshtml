@model List<Privacy_Web_App.Models.RoleListViewModel>

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>RoleList</h1>



    <div class="card">
        <div class="card-body">
        <button class="btn btn-outline-success" style="/* margin-bottom: 10px; */position: absolute;right: 25px;display: inline-block;" data-toggle="modal" data-target="#AddModal">Add new role</button>
        <div class="row">
<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role_Name)
            </td>
            <td>
               @*  @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
            </td>
        </tr>
}
    </tbody>
</table>
</div>
    </div>

</div>


<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddModalLabel">Add new role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">New role name</span>
  </div>
                    <input type="text" class="form-control" id="rolenameinput" placeholder="New role name" aria-label="Username" aria-describedby="basic-addon1">
</div>

                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="submit" class="btn btn-outline-success">Add new role</button>
            </div>
        </div>
    </div>
</div>


<script>
    $("#submit").click(function (e) {
        e.preventDefault();
        var role = document.getElementById("rolenameinput");
        var rolename = role.value;
        

        window.location.href = "/Admin/AddRole?rolename=" + rolename;
    })
</script>