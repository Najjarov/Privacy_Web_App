@model Privacy_Web_App.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<section class="st-hero st-style2 st-bg st-dynamic-bg st-ripple-version" data-src='/img/hero-bg-1.jpg'>
    <div class="container">
        <div class="st-hero-text">
            <div class="st-author"><img src="/img/section/hero-img.jpg" alt=""></div>
            <h1>Hi, I am <span>Privacy</span></h1>
            <p>I am a Professional Apex Analyst.</p>


           




            <form asp-action="Login" style="margin: auto;max-width: 400px;padding: 10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group flex-nowrap">
                    <div class="input-group-prepend" style="margin-bottom: 5px;">
                        <label asp-for="UserName" class="input-group-text" id="addon-wrapping">User</label>
                    </div>
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>

                <div class="input-group flex-nowrap">
                    <div class="input-group-prepend" style="margin-bottom: 5px;">

                        <label asp-for="Password" class="input-group-text" id="addon-wrapping"></label>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Remember Me
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" id="submit" value="Log in" class="btn btn-outline-light btn-block" style="">
                </div>
            </form>

            </div>
    </div>
    </section>

