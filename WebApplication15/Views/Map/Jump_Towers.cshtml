@model Privacy_Web_App.Models.jumpTowerViewModel


    <style>

    .jump-tower-icon : hover{

    }
    </style>
<div class="st-dark-bg">
    <div class="st-height-b100 st-height-lg-b80"></div>
    <div class="container">
        <div class="st-section-heading st-style1">
            <h4 class="st-section-heading-title">@Model.map.Name - Jump Towers</h4>
            <h2 class="st-section-heading-subtitle" style="font-size:50px;">@Model.map.Name - Jump Towers</h2>
        </div>
        <div class="st-height-b25 st-height-lg-b25"></div>
    </div>
    <div class="container">

       
         @Html.Partial("/Views/Shared/_MapsLinksPartial.cshtml")
        @Html.Partial("/Views/Shared/_mapTabsPartial.cshtml")
        
        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent"style="position: relative;">
            <div class="tab-pane fade show active" id="nav-poi" role="tabpanel" aria-labelledby="nav-poi-stats">
                <div class="container">




                    <div style="width:1080px;height:1080px;position:relative;top:0px;left:0px">

                        @if (ViewBag.mapid == 1)
                        {
                            <img src="/img/maps/we_map_black_&_white.png" style="position:relative;top:0px;left:0px" />
                        }
                        @if (ViewBag.mapid == 6)
                        {
                            <img src="/img/maps/E-District-black.png" style="position:relative;top:0px;left:0px" />
                        }




                        @foreach (var poi in Model.towers)
                        {
                            <div id="jump-tower-container-@poi.Id">
                                @{
                                    var pos_x = poi.pos_x - 12 + "px";
                                    var pos_y = poi.pos_y - 12 + "px";
                                    var hover_x = poi.hover_x  + "px";
                                    var hover_y = poi.hover_y  + "px";




                                    
                                       
                                            <img id="jump-tower-icon-@poi.Id" src="~/img/jump_tower_icon.png" style="position:absolute;left:@pos_x;top:@pos_y;z-index:1000" />
                                        




                                        
                                        <img id="jump-tower-img-@poi.Id" src="~/img/jump_towers/@poi.img" style="position:absolute;left:@hover_x;top:@hover_y" />
                                            

                                    
                                    
                                        <style>
                                        #jump-tower-icon-@poi.Id {
                                            cursor: pointer
                                        }

                                        #jump-tower-img-@poi.Id {
                                            transition: .5s ease;
                                            opacity: 0;
                                        }

                                       #jump-tower-icon-@poi.Id:hover + #jump-tower-img-@poi.Id {
                                            opacity: 1;
                                        }

                                        
                                        
                                        </style>



                                }
                            </div>
                        }
                       
                    </div>






                </div>

            </div>

            <div class="st-height-b100 st-height-lg-b80"></div>

        </div>

        

    </div>
</div>
</div>


